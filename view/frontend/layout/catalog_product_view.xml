<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.product.related" remove="true"/>
        <referenceBlock name="product.info.upsell" remove="true"/>
        <referenceContainer name="content.aside">
            <block after="-" class="FourTell\Recommend\Block\Product\ProductList\Upsell"
                   name="recommend.upsell"
                   template="Magento_Catalog::product/list/items.phtml">
            </block>
            <block after="-" class="FourTell\Recommend\Block\Product\ProductList\Related"
                   name="recommend.related"
                   template="Magento_Catalog::product/list/items.phtml">
            </block>
        </referenceContainer>
    </body>
</page>